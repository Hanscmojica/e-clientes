# E-Clientes Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=5000
SSL_PORT=443
HOST=127.0.0.1
DOMAIN=e-clientes.rodall.com

# Database Configuration
# Replace with your actual database credentials
DATABASE_URL="mysql://username:password@hostname:3306/database_name"

# JWT Security
# Generate a strong secret key (minimum 64 characters recommended)
# You can use: openssl rand -base64 64
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here-at-least-64-characters-long
JWT_EXPIRE=8h

# FTP Configuration
FTP_HOST=your.ftp.server.com
FTP_PORT=21
FTP_USER=your_ftp_username
FTP_PASSWORD=your_secure_ftp_password
FTP_SECURE=false
FTP_BASE_PATH=/
FTP_TIMEOUT=60000
FTP_PASV_TIMEOUT=60000
FTP_KEEPALIVE=60000

# SSL Certificate Paths (relative to backend directory)
SSL_KEY_PATH=path/to/your/private.key
SSL_CERT_PATH=path/to/your/certificate.crt

# Security Notes:
# - Never commit this file with real credentials
# - Use strong, unique passwords
# - Rotate secrets regularly
# - Use environment-specific values